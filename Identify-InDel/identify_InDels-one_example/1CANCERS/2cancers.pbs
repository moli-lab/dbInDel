  rm -rf $file.all_chroms.psl.sam.1 $file.all_chroms.psl.sam.2

  perl filter_sam_by_string.pl $file.all_chroms.psl.real.sam $file.all_chroms.psl.real.filt.sam $file.all_chroms.psl.inserts.bed
