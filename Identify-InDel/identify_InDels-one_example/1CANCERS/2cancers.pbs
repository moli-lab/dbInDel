for file in "${!k27ac[@]}"
do
  echo $file

  for chrpath in $genomefasta/chr*.fa
  do
    export chr=`basename $chrpath`
    head -n -1 $chr.$file.blat.psl > $chr.$file.blat.psl.clean #把没跑出来的表最后一行去掉
    head -n -1 $chr.$file.blat.psl.tmp.1 >> $chr.$file.blat.psl.clean  #把没跑出来的表最后一行去掉,追加到一起
